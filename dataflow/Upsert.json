{
	"name": "Upsert",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Source",
						"type": "DatasetReference"
					},
					"name": "source"
				},
				{
					"dataset": {
						"referenceName": "Destination",
						"type": "DatasetReference"
					},
					"name": "Lookup"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "Destination",
						"type": "DatasetReference"
					},
					"name": "Destination"
				}
			],
			"transformations": [
				{
					"name": "AlterRow"
				},
				{
					"name": "LKP"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as integer,",
				"          Name as string,",
				"          Age as integer,",
				"          City as string,",
				"          Salary as decimal(10,2)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source",
				"source(output(",
				"          ID as integer,",
				"          Name as string,",
				"          Age as integer,",
				"          City as string,",
				"          Salary as decimal(10,2)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> Lookup",
				"LKP alterRow(insertIf(isNull(Lookup@ID)),",
				"     updateIf(!isNull(Lookup@ID)",
				"&& (source@Name != Lookup@Name ",
				"|| source@Age != Lookup@Age ",
				"|| source@City != Lookup@City ",
				"|| source@Salary != Lookup@Salary)",
				")) ~> AlterRow",
				"source, Lookup lookup(source@ID == Lookup@ID",
				"     && source@Name == Lookup@Name",
				"     && source@Age == Lookup@Age",
				"     && source@City == Lookup@City",
				"     && source@Salary == Lookup@Salary,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> LKP",
				"AlterRow sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ID as integer,",
				"          Name as string,",
				"          Age as integer,",
				"          City as string,",
				"          Salary as decimal(10,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['ID'],",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> Destination"
			]
		}
	}
}